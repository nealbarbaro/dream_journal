<%= form_for @post, :remote => true do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="night-mode">
    <button type="button" class="btn btn-inverse night-button" data-toggle="button">Night Mode</button>
  </div>
  <div class="field">
    <%= f.text_area :content, placeholder: "Record dreams here..." %>

  </div>
  <div id="submit-post">
    <%= f.check_box :lucid, {}, true, false %>
    <%= f.label :lucid %>
    <%= f.submit "Post", class: "btn btn-medium btn-inverse" %>
  </div>
<% end %>