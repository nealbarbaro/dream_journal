<%= form_for(@post, :html => {:class => "new_post", :id => "new_post"}, :as => @post, :url => posts_path(@post), :remote => true)  do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="night-zone">
    <div class="night-area">
      <h5 class="night-label">Night Mode</h5>
      <%= link_to "?", "/night_modal/", class: "question-link", data: { remote: "true"} %>
      <div class="btn-group night-mode" data-toggle="buttons-radio">
        <button type="button" class="btn btn-inverse night-on">On</button>
        <button type="button" class="btn btn-inverse night-off">Off</button>
      </div>
    </div>
    <div class="field">
      <%= f.text_area :content, placeholder: "Record dreams here..." %>
    </div>
    <div id="submit-post">
      <%= f.submit "Post", id: "post_button", class: "btn btn-medium btn-inverse post-button" %>
    </div>
  </div>
  <div id="modal_window"></div>
<% end %>