<li id="<%= post_item.id %>">
  <span class="user">
  </span>

  <span class="content">
    <% if post_item.lucid? %>
      <i class="icon-eye-open icon-white"></i>
    <% end %>
    <%= simple_format(post_item.content) %>
  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(post_item.created_at) %> ago.
  </span>
  <% if current_user?(post_item.user) %>
    <%= link_to "delete", post_item, :method => :delete,
                                     :data => { :confirm => "You sure?" },
                                     :remote => true %>
  <% end %>
</li>